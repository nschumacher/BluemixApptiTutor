<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Email</th>
      <th>Istutor</th>
      <th>Recievereminders</th>
      <th>Profilepicture</th>
      <th>Passwordrecoverquestion1</th>
      <th>Passwordrecoverquestion2</th>
      <th>Passwordrecoveranswer1</th>
      <th>Passwordrecoveranswer2</th>
      <th>Isstudent</th>
      <th>Aboutme</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= user.isTutor %></td>
        <td><%= user.recieveReminders %></td>
        <td><%= user.profilePicture %></td>
        <td><%= user.passwordRecoverQuestion1 %></td>
        <td><%= user.passwordRecoverQuestion2 %></td>
        <td><%= user.passwordRecoverAnswer1 %></td>
        <td><%= user.passwordRecoverAnswer2 %></td>
        <td><%= user.isStudent %></td>
        <td><%= user.aboutMe %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

